{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "lib": ["ES2020"],
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2020",
    "baseUrl": ".",
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "outDir": "dist",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
